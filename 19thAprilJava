package Encap;

import java.util.Scanner;

public class Accept_pro 
{
	int i,size,ch;
	public int[] accept()
	{
		Scanner sc=new Scanner(System.in);
		
		System.out.println("1:Armstrong No \n 2:Swapping \n3:Array Ascending");
		ch=sc.nextInt();
		System.out.println("Now enter the size");
		size=sc.nextInt();
		int[] arr=new int[size];
		System.out.println("Enter "+size+" numbers");
		
		for( i=0;i<size;i++)
		{
			arr[i]=sc.nextInt();
		}
		
		return arr;
	}

}
