package Encap;

public class class_A extends Accept_pro 
{
	public void mot1()
	{
	int[] arr1=accept();
	
	System.out.println("This is class A method1");
	
	for(i=0;i<size;i++)
	{
		System.out.println(arr1[i]);
	}
	
	
	}

}

